<td>{{ form_errors(item.startDate) }}
    {{ form_widget(item.startDate) }}</td>
<th class="col-xs-2 col-md-1">Date de fin</th>
<td>{{ form_errors(item.endDate) }}
    {{ form_widget(item.endDate) }}</td>
<th class="col-xs-2 col-md-1">Emprunteur</th>
<td>{{ form_errors(item.user) }}
    {{ form_widget(item.user) }}</td>
