<th class="col-xs-2 col-md-1">Matériel</th>
<td>{{ form_errors(item.device) }}
    {{ form_widget(item.device, { 'attr' : {'class':'onChangeDevice'} } ) }}
    <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate loading"></span></td>
